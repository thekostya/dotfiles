cd ~/.thekostya/vim

echo 'set runtimepath^=~/.thekostya/vim
source ~/.thekostya/vim/vimrc/common.vim
source ~/.thekostya/vim/vimrc/filetypes.vim
source ~/.thekostya/vim/vimrc/plugins.vim
source ~/.thekostya/vim/vimrc/extended.vim
try
source ~/.thekostya/vim/custom_config.vim
catch
endtry' > ~/.vimrc.go

echo "Installed w/o any issues! Start producing your Go magic now :-)"
echo "Hint: vim -u ~/.vimrc.go"
